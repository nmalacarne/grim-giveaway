extends ../application

block content
  .col-xs-10.col-xs-offset-1.col-sm-5.col-sm-offset-3.col-md-8.col-md-offset-2
    include ../includes/timer
    while error = flash.shift()
      .alert.alert-danger.text-center 
          span= error.message
    p#explaination.text-center 
      | Enter now for a chance to win a copy of Grim Dawn on Steam!
    a(href='/auth')
      img(
        src='http://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_small.png'
      ).center-block
    #disclaimer.text-center
      :markdown
        This contest is in no way affiliated with [Valve Software](http://www.valvesoftware.com/) or 
        [Crate Entertainment](http://www.crateentertainment.com/)
    .text-center
      a(href='//github.com/nmalacarne/grim-giveaway.com', target='_blank') source
      | &nbsp;|&nbsp;
      a(href='mailto:nick@grim-giveaway.com') contact
    #powered-by.text-center
      a(href='http://steampowered.com', target='_blank') Powered by Steam
